{% extends "admin_base.njk" %}

{% block titulo %}Juego | Nuevo{% endblock %}

{% block contenido %}

    {% if (juego) %}
    
        <h1>Edicion de juego Existente</h1>
        <form action="/admin/juegos/{{ juego.id }}" method="post">
            <input type="hidden" name="_method" value="put" />

            <div class="form-group mb-3">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" 
                    placeholder="Nombre del juego..." value="{{ juego.nombre }}"/>
            </div>

            <div class="form-group mb-3">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion"
                    placeholder="Descripcion del juego..." value="{{ juego.descripcion }}"/>
            </div>

            <div class="form-group mb-3">
                <label for="edad">Edad:</label>
                <input type="text" class="form-control" name="edad" 
                    placeholder="Edad requerida del juego..." value="{{ juego.edad }}"/>
            </div>

            <div class="form-group mb-3">
                <label for="jugadores">Jugadores:</label>
                <input type="text" class="form-control" name="jugadores" 
                    placeholder="Número de jugadores..." value="{{ juego.jugadores }}"/>
            </div>

            <div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <select name="tipo">
                    <option value="rol">Rol</option>
                    <option value="dados">Dados</option>
                    <option value="escape">Escape</option>
                    <option value="fichas">Fichas</option>
                    <option value="cartas">Cartas</option>
                    <option value="tablero">Tablero</option>
                </select>
            </div>

            <!--<div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo" 
                    placeholder="Tipo del juego..." value="{{ juego.tipo }}"/>
            </div>-->

            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="text" class="form-control" name="precio"
                    placeholder="Precio del juego..." value="{{ juego.precio }}"/>
            </div>

            <!--<div class="form-group mb-3">
                <label for="imagen">Imagen:</label>
                <input type="file" class="form-control" name="imagen"
                    placeholder="Imagen del libro..." value="{{ juego.imagen }}"/>
            </div>-->

            <div class="form-group mb-3">
                <label for="Ediciones">Ediciones:</label>
                <input type="text" class="form-control" name="Ediciones"
                    placeholder="Precio del libro..." value="{{ juego.Ediciones }}"/>
            </div>

            <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>

    {% else %}

        <h1>Inserción de nuevo juego</h1>

        <form action="/admin/juegos" method="post" enctype="multipart/form-data">

            <div class="form-group mb-3">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control" name="nombre" 
                    placeholder="Nombre del juego..." />
            </div>

            <div class="form-group mb-3">
                <label for="descripcion">Descripcion:</label>
                <input type="text" class="form-control" name="descripcion" 
                    placeholder="Descripción del juego..." />
            </div>

            <div class="form-group mb-3">
                <label for="edad">Edad:</label>
                <input type="text" class="form-control" name="edad" 
                    placeholder="Edad requerida del juego..." />
            </div>

            <div class="form-group mb-3">
                <label for="jugadores">Jugadores:</label>
                <input type="text" class="form-control" name="jugadores" 
                    placeholder="Jugadores requeridos para el juego..." />
            </div>

            <!--<div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <input type="text" class="form-control" name="tipo" 
                    placeholder="Tipo del juego..." />
            </div>-->

            <div class="form-group mb-3">
                <label for="tipo">Tipo:</label>
                <select name="tipo">
                    <option value="rol">Rol</option>
                    <option value="dados">Dados</option>
                    <option value="escape">Escape</option>
                    <option value="fichas">Fichas</option>
                    <option value="cartas">Cartas</option>
                    <option value="tablero">Tablero</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="precio">Precio:</label>
                <input type="text" class="form-control" name="precio" 
                    placeholder="Precio del juego..." />
            </div>

            <div class="form-group mb-3">
                <label for="precio">Imagen:</label>
                <input type="file" class="form-control" name="imagen"
                    placeholder="Portada del juego..." />
            </div>

            <div class="form-group mb-3">
                <label for="Ediciones">Ediciones:</label>
                <input type="text" class="form-control" name="Ediciones" 
                    placeholder="Ediciones del juego..." />
            </div>


            <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
            </div>

        </form>

    {% endif %}

{% endblock %}